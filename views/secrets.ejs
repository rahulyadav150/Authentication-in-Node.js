<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Here's your secrets</h1>

    <% usersWithSecrets.forEach(function(secret){ %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%=secret.title %></h5>
          
          <p class="card-text"><%=secret.data %></p>
          <a href="#" class="card-link">Card link</a>
          <a href="#" class="card-link">Another link</a>
        </div>
      </div>
    <% }) %>



    <hr>
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
